{
  "name": "@render-engine/infrastructure",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.13.1",
  "description": "Infrastructure utilities and repositories for render-engine",
  "author": "",
  "license": "ISC",
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*",
      "import": "./dist/*"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --fix",
    "format": "prettier --write . --log-level warn",
    "test": "vitest run",
    "db:generate": "pnpm run build && drizzle-kit generate",
    "db:migrate": "pnpm run build && drizzle-kit migrate",
    "db:push": "pnpm run build && drizzle-kit push",
    "db:studio": "pnpm run build && drizzle-kit studio",
    "db:drop": "pnpm run build && drizzle-kit drop"
  },
  "dependencies": {
    "@ai-sdk/openai": "2.0.0-beta.16",
    "@libsql/client": "^0.15.10",
    "@openrouter/ai-sdk-provider": "^1.2.0",
    "@render-engine/application": "workspace:*",
    "@render-engine/domain": "workspace:*",
    "ai": "5.0.0-beta.34",
    "axios": "^1.11.0",
    "drizzle-orm": "^0.44.4",
    "execa": "^9.6.0",
    "globby": "^14.0.2",
    "langsmith": "^0.3.67",
    "p-limit": "^6.2.0",
    "tsyringe": "^4.10.0",
    "uuid": "^11.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@render-engine/eslint-config": "workspace:*",
    "@types/node": "^22.17.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.17.0",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
