{
  "name": "admin-backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "pnpm --filter @render-engine/admin-backend-infrastructure db:generate",
    "db:migrate": "pnpm --filter @render-engine/admin-backend-infrastructure db:migrate",
    "db:push": "pnpm --filter @render-engine/admin-backend-infrastructure db:push",
    "db:studio": "pnpm --filter @render-engine/admin-backend-infrastructure db:studio",
    "db:seed": "tsx src/infrastructure/schema-management/seed.ts",
    "db:drop": "pnpm --filter @render-engine/admin-backend-infrastructure db:drop"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "@render-engine/admin-sdk": "workspace:*",
    "@render-engine/admin-backend-application": "workspace:*",
    "@render-engine/admin-backend-infrastructure": "workspace:*",
    "@render-engine/admin-backend-domain": "workspace:*",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
